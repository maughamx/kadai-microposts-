<% if favorite_items.any? %>
  <ul class="media-list">
    <% favorite_items.each do |favorite_item| %>
        <li class="media">
          <div class="media-left">
            <img class="media-object img-rounded" src="<%= gravatar_url(favorite_item.user, { size: 50 }) %>" alt="">
          </div>        
          <div class="media-body">
            <div>
              <%= favorite_item.user.name %> <span class="text-muted">posted at <%= favorite_item.created_at %></span>
            </div>
            <div>
              <p><%= link_to 'View profile', user_path(favorite_item.user) %></p>
            </div>
            <div>
              <%= favorite_item.content %>
              <%= render 'favorites/favorite_button', favorite_item: favorite_item %>
            </div>
          </div>
        </li>
    <% end %>
  </ul>
<% end %>