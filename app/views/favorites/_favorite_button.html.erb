<% if current_user.favorite?(favorite_item) %>
  <%= form_for(current_user.favorites.find_by(micropost_id: favorite_item.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, favorite_item.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, favorite_item.id %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>
